<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_height"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:id="@+id/layout_lang_container">

    <TextView
        android:id="@+id/icon_lang"
        android:layout_width="@dimen/list_height"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/list_icon"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/text_lang_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/icon_lang"
        android:textStyle="bold"
        android:textSize="@dimen/list_language"/>

    <TextView
        android:id="@+id/text_lang_voices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/icon_lang"
        android:layout_marginStart="16dp"
        android:textStyle="bold"
        android:textSize="@dimen/list_variant"
        android:layout_below="@+id/text_lang_name"/>

</RelativeLayout>